<!doctype html>
<head>
	<title>Big Space | Share Content</title>
	<%- include("./partials/meta"); %>
</head>
<body>
	<script src = "/script.js"></script>
	<script src="/fontawesome.js"></script>
	<h3>
		&nbsp;&nbsp;<i class="fa-solid fa-user"></i> <span style = "color:var(--primary)">&nbsp;<%- user %></span>
		<span class = "settings"><a href = "/settings" class="fa-solid fa-gear"></a></span>
		<a href = "/logout" class = "logout" style = "float:right;">Logout <i class="fa-solid fa-circle-xmark"></i></a>
	</h3>
	<center>
		<%- include("./partials/header"); %>
	</center>
	<%- posts %>
		<br><br><br><br>
		<div class = "pencil">
			<a href = "/post_page">
				<button class = "post" type = "submit"><i class="fa-solid fa-pencil" style = "font-size:18px;"></i></button>
			</a>
		</div>
		<center>
			<%- include("./partials/footer"); %>
		</center>
		<script>
			if(localStorage.getItem("viewed_message") == null){
				alert("this app is in Beta mode - expect bugs and frequent database resets, so to make a post you might have to make an account again");
				localStorage.setItem("viewed_message", "true");
			}
		</script>
</body>